<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColorHint">@color/brown</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="EditLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">15dp</item>


    </style>

    <style name="CheckTextStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="EditTextBirth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">2</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColorHint">@color/brown</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">number</item>

    </style>

    <style name="BtnText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="BtnStyle">
        <item name="android:layout_margin">15dp</item>
        <item name="backgroundColor">@color/brown</item>

    </style>


</resources>